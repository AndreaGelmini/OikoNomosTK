{
    "name": "oikonomos-tk/oikonomos-tk",
    "description": "A comprehensive PHP Toolkit for financial mathematics, micro/macroeconomic calculations, financial analysis, and forecasting. OikoNomosTK aims to provide a robust and well-tested set of tools for developers needing to implement common formulas and models from finance and economics within their PHP applications.",
    "keywords": ["php", "library", "toolkit", "finance", "financial-mathematics", "microeconomics", "macroeconomics", "quantitative", "analysis", "forecasting", "business", "calculation"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrea Gelmini",
            "email": "github@andreagelmini.it",
            "homepage": "https://github.com/andreagelmini",
            "role": "Developer"
        },
        {
            "name": "Contributors",
            "homepage": "https://github.com/AndreaGelmini/OikoNomosTK/graphs/contributors"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php" : ">=8.2",
        "ext-bcmath" : "*"
    }, 
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "OikoNomosTK\\": "src/"
        }
    },
	"autoload-dev": {
		"psr-4": {
			"OikoNomosTK\\Tests\\": "tests/"
		}
	},
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
